@model HospitalManagementSystem.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Delete Department</h1>

<h3>Are you sure you want to delete this department?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Doctors</dt>
        <dd class="col-sm-10">
            @if (Model.Doctors != null && Model.Doctors.Any())
            {
                <ul>
                @foreach (var doc in Model.Doctors)
                {
                    <li>@doc.FullName (@doc.Specialization)</li>
                }
                </ul>
            }
            else
            {
                <span>No doctors in this department.</span>
            }
        </dd>
    </dl>
</div>
<form asp-action="Delete" asp-route-id="@Model.DepartmentID" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="DepartmentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>