@model IEnumerable<HospitalManagementSystem.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<style>
    :root {
        --header-height: 70px;
        --footer-height: 60px;
        --primary-color: #5b8df9;
        --secondary-color: #7b5cfb;
        --primary-grad: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        --shadow-light: rgba(91, 141, 249, 0.22);
        --shadow-dark: rgba(20, 30, 40, 0.14);
        --muted-text: #535e6c;
        --card-bg: rgba(255, 255, 255, 0.88);
        --text-color: #2b2b2b;
    }

    /* Keep the background and layout wrappers as-is */
    .department-bg-fixed {
        content: "";
        position: fixed;
        top: var(--header-height);
        left: 0;
        right: 0;
        bottom: var(--footer-height);
        background-image: url('@Url.Content("~/images/dept.png")');
        background-size: cover;
        background-position: center;
        z-index: 0;
    }

    .department-bg-overlay {
        position: fixed;
        top: var(--header-height);
        left: 0;
        right: 0;
        bottom: var(--footer-height);
        background: linear-gradient(to bottom, rgba(255, 255, 255, 0.18), rgba(255, 255, 255, 0.06));
        z-index: 1;
        pointer-events: none;
    }

    .department-wrapper {
        position: relative;
        z-index: 2;
        height: calc(100vh - var(--header-height) - var(--footer-height));
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 18px;
        box-sizing: border-box;
    }

    /* Card container for flex layout */
    .dept-card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
        justify-content: center;
        align-items: stretch;
        width: 100%;
        max-width: 1100px;
        padding-top: 20px;
    }

    /* Main card style */
    .dept-card {
        background: var(--card-bg);
        border-radius: 14px;
        box-shadow: 0 14px 40px var(--shadow-dark);
        backdrop-filter: blur(4px);
        padding: 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        flex: 1 1 300px; /* Flex properties for responsive cards */
        max-width: 320px;
    }

        .dept-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 50px var(--shadow-dark);
        }

        .dept-card .icon {
            width: 80px;
            height: 80px;
            background: var(--primary-grad);
            -webkit-mask: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9 9 0 000-18C8.5 3 3 8.5 3 12a9 9 0 009 9zM9 12a3 3 0 11-6 0 3 3 0 016 0zm9-3a3 3 0 100-6 3 3 0 000 6zM21 12a3 3 0 11-6 0 3 3 0 016 0zM12 3a3 3 0 11-6 0 3 3 0 016 0zM12 21a3 3 0 100-6 3 3 0 000 6z" /></svg>') no-repeat center;
            mask: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9 9 0 000-18C8.5 3 3 8.5 3 12a9 9 0 009 9zM9 12a3 3 0 11-6 0 3 3 0 016 0zm9-3a3 3 0 100-6 3 3 0 000 6zM21 12a3 3 0 11-6 0 3 3 0 016 0zM12 3a3 3 0 11-6 0 3 3 0 016 0zM12 21a3 3 0 100-6 3 3 0 000 6z" /></svg>') no-repeat center;
            -webkit-mask-size: 80%;
            mask-size: 80%;
            margin-bottom: 20px;
        }

        .dept-card h3 {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-color);
            margin-bottom: 12px;
        }

        .dept-card p {
            color: var(--muted-text);
            font-size: 1rem;
            line-height: 1.6;
            flex: 1; /* Allows the paragraph to fill space */
            margin-bottom: 24px;
        }

    .read-more-btn {
        display: inline-block;
        padding: 12px 24px;
        background: linear-gradient(90deg, #17c0b5, #3aa0ff);
        color: #fff;
        border-radius: 999px;
        text-decoration: none;
        font-weight: 600;
        box-shadow: 0 6px 14px rgba(56, 160, 255, 0.12);
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .read-more-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 22px rgba(56, 160, 255, 0.24);
        }

    .no-departments {
        width: 100%;
        text-align: center;
        color: var(--muted-text);
        font-size: 1.2rem;
        padding-top: 50px;
    }

    /* Responsive tweaks for smaller screens */
    @@media (max-width: 768px) {
        .dept-card-container {
            flex-direction: column;
            align-items: center;
        }

        .dept-card {
            width: 100%;
            max-width: 90%;
        }
    }
</style>

<!-- Background divs are kept as requested -->
<div class="department-bg-fixed" aria-hidden="true"></div>
<div class="department-bg-overlay" aria-hidden="true"></div>

<div class="department-wrapper">
    <div class="dept-card-container">
        @if (Model != null && Model.Any())
        {
            foreach (var dept in Model)
            {
                <div class="dept-card">
                    <!-- Icon placeholder - you can use a different icon for each department -->
                    <div class="icon"></div>
                    <h3>@dept.Name</h3>
                    <p>
                        @* This is a placeholder description. You will need to add a "Description" property to your Department model to display real content here. *@
                        The @dept.Name department provides specialized care with a focus on cutting-edge treatments and patient well-being.
                    </p>
                    <a href="@Url.Action("Details", new { id = dept.DepartmentID })" class="read-more-btn">Read more</a>
                </div>
            }
        }
        else
        {
            <div class="no-departments">
                No departments found. Please add new departments to get started.
            </div>
        }
    </div>
</div>
