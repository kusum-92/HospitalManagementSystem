@model HospitalManagementSystem.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<h1>Department Details</h1>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Doctors</dt>
        <dd class="col-sm-10">
            @if (Model.Doctors != null && Model.Doctors.Any())
            {
                <ul>
                @foreach (var doc in Model.Doctors)
                {
                    <li>@doc.FullName (@doc.Specialization)</li>
                }
                </ul>
            }
            else
            {
                <span>No doctors in this department.</span>
            }
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.DepartmentID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>