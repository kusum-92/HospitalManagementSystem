@model HospitalManagementSystem.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@section PageBackground {
    <div class="account-bg-fixed" aria-hidden="true"></div>
    <div class="account-bg-overlay" aria-hidden="true"></div>
}

<style>
    :root {
        --header-height: 70px;
        --footer-height: 64px;
        --primary: #5b8df9;
        --secondary: #7b5cfb;
        --accent: #17c0b5;
        --grad-main: linear-gradient(135deg,#5b8df9,#7b5cfb);
        --grad-accent: linear-gradient(90deg,#17c0b5,#3aa0ff);
        --panel-bg: linear-gradient(145deg,rgba(255,255,255,0.92),rgba(255,255,255,0.80));
        --muted: #5c6672;
        --text: #243041;
    }

    [data-theme="dark"] :root {
        --panel-bg: linear-gradient(145deg,rgba(36,48,62,0.92),rgba(26,36,48,0.88));
        --muted: #c2ced8;
        --text: #f3f7fa;
    }

    .account-bg-fixed {
        position: fixed;
        top: var(--header-height);
        left: 0;
        right: 0;
        bottom: var(--footer-height);
        background-image: url('@Url.Content("~/images/dept.png")');
        background-size: cover;
        background-position: center;
        z-index: 0;
    }

    .account-bg-overlay {
        position: fixed;
        top: var(--header-height);
        left: 0;
        right: 0;
        bottom: var(--footer-height);
        background: linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08));
        z-index: 1;
        pointer-events: none;
    }

    [data-theme="dark"] .account-bg-overlay {
        background: linear-gradient(to bottom,rgba(0,0,0,0.55),rgba(0,0,0,0.35));
    }

    .auth-wrapper {
        position: relative;
        z-index: 2;
        max-width: 460px;
        margin: 0 auto;
        padding: 40px 10px 70px;
        min-height: calc(100vh - var(--header-height) - var(--footer-height));
        display: flex;
        align-items: flex-start;
        justify-content: center;
    }

    .auth-panel {
        width: 100%;
        background: var(--panel-bg);
        border: 1px solid rgba(120,140,170,0.28);
        border-radius: 32px;
        padding: 50px 48px 56px;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 28px 74px rgba(40,70,140,0.26);
        position: relative;
        overflow: hidden;
        animation: fadeAuth .55s ease;
    }

    [data-theme="dark"] .auth-panel {
        border: 1px solid rgba(255,255,255,0.12);
        box-shadow: 0 30px 80px rgba(0,0,0,0.70);
    }

    .auth-panel::before {
        content: "";
        position: absolute;
        width: 520px;
        height: 520px;
        top: -260px;
        right: -260px;
        background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 70%);
        pointer-events: none;
    }

    [data-theme="dark"] .auth-panel::before {
        background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.20),transparent 74%);
    }

    h1.auth-title {
        font-size: 1.95rem;
        font-weight: 700;
        margin: 0 0 10px;
        background: linear-gradient(90deg,#5b8df9,#7b5cfb);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    [data-theme="dark"] h1.auth-title {
        background: linear-gradient(90deg,#d5e6ff,#eddfff);
        text-shadow: 0 0 6px rgba(255,255,255,0.35),0 2px 10px rgba(0,0,0,0.65);
    }

    .auth-sub {
        margin: 0 0 30px;
        font-size: .85rem;
        letter-spacing: .35px;
        text-transform: uppercase;
        font-weight: 600;
        color: var(--muted);
    }

    [data-theme="dark"] .auth-sub {
        color: #bfcbd5;
    }

    label.form-label {
        font-weight: 600;
        letter-spacing: .35px;
        color: var(--text);
    }

    [data-theme="dark"] label.form-label {
        color: #f1f6fa;
    }

    .auth-panel .form-control {
        background: rgba(255,255,255,0.85);
        border: 1px solid rgba(120,140,170,0.35);
        transition: .25s;
    }

    [data-theme="dark"] .auth-panel .form-control {
        background: rgba(48,62,82,0.82);
        border: 1px solid rgba(255,255,255,0.12);
        color: #eef4f9;
    }

    .auth-panel .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(91,141,249,0.30);
        background: rgba(255,255,255,0.97);
    }

    [data-theme="dark"] .auth-panel .form-control:focus {
        background: rgba(58,72,92,0.95);
        box-shadow: 0 0 0 4px rgba(91,141,249,0.50);
    }

    .btn-accent {
        background: var(--grad-accent);
        color: #fff;
        border: none;
        border-radius: 18px;
        padding: 14px 30px;
        font-weight: 600;
        letter-spacing: .5px;
        width: 100%;
        box-shadow: 0 18px 48px rgba(56,160,255,0.38);
        transition: .35s;
    }

        .btn-accent:hover {
            transform: translateY(-4px);
            box-shadow: 0 28px 64px rgba(56,160,255,0.45);
            filter: brightness(.97);
        }

    .validation-summary-errors ul {
        margin: 0 0 18px;
        padding-left: 18px;
        font-size: .85rem;
    }

    @@keyframes fadeAuth {
        from {
            opacity: 0;
            transform: translateY(18px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width:620px) {
        .auth-panel {
            padding: 44px 34px 52px;
        }
    }
</style>

<div class="auth-wrapper">
    <div class="auth-panel">
        <h1 class="auth-title">Login</h1>
        <div class="auth-sub">Secure access portal</div>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-4">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn-accent">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}