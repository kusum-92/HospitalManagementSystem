@{
    ViewData["Title"] = "Admin Dashboard";
}

@section PageBackground {
    <div class="admin-bg-fixed" aria-hidden="true"></div>
    <div class="admin-bg-overlay" aria-hidden="true"></div>
}

<style>
    :root {
        --header-height: 70px;
        --footer-height: 64px;
        --primary: #5b8df9;
        --secondary: #7b5cfb;
        --accent: #17c0b5;
        --danger: #ff6b6b;
        --grad-main: linear-gradient(135deg,#5b8df9,#7b5cfb);
        --grad-accent: linear-gradient(90deg,#17c0b5,#3aa0ff);
        --grad-warn: linear-gradient(135deg,#ffb347,#ff7b36);
        --grad-danger: linear-gradient(135deg,#ff6b6b,#ff3d8b);
        --panel-bg: linear-gradient(145deg,rgba(255,255,255,0.92),rgba(255,255,255,0.80));
        --tile-bg: linear-gradient(145deg,rgba(255,255,255,0.94),rgba(241,245,255,0.88));
        --tile-hover: linear-gradient(145deg,rgba(255,255,255,0.98),rgba(246,249,255,0.94));
        --muted: #5c6672;
        --text: #243041;
    }

    [data-theme="dark"] :root {
        --panel-bg: linear-gradient(145deg,rgba(34,46,60,0.94),rgba(24,34,46,0.90));
        --tile-bg: linear-gradient(145deg,rgba(44,58,76,0.92),rgba(36,48,64,0.88));
        --tile-hover: linear-gradient(145deg,rgba(54,68,88,0.96),rgba(42,54,70,0.92));
        --muted: #c3ced8;
        --text: #f3f7fa;
    }

    .admin-bg-fixed {
        position: fixed;
        top: var(--header-height);
        left: 0;
        right: 0;
        bottom: var(--footer-height);
        background-image: url('@Url.Content("~/images/dept.png")');
        background-size: cover;
        background-position: center;
        z-index: 0;
    }

    .admin-bg-overlay {
        position: fixed;
        top: var(--header-height);
        left: 0;
        right: 0;
        bottom: var(--footer-height);
        background: linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08));
        z-index: 1;
        pointer-events: none;
    }

    [data-theme="dark"] .admin-bg-overlay {
        background: linear-gradient(to bottom,rgba(0,0,0,0.55),rgba(0,0,0,0.38));
    }

    .admin-wrapper {
        position: relative;
        z-index: 2;
        max-width: 1380px;
        margin: 0 auto;
        padding: 40px 16px 72px;
        min-height: calc(100vh - var(--header-height) - var(--footer-height));
        animation: adminFade .55s ease;
    }

    .panel {
        background: var(--panel-bg);
        border: 1px solid rgba(120,140,170,0.28);
        border-radius: 40px;
        padding: 64px 70px 72px;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 34px 88px rgba(40,70,140,0.28);
        position: relative;
        overflow: hidden;
    }

    [data-theme="dark"] .panel {
        border: 1px solid rgba(255,255,255,0.12);
        box-shadow: 0 34px 90px rgba(0,0,0,0.72);
    }

    .panel::before,
    .panel::after {
        content: "";
        position: absolute;
        width: 720px;
        height: 720px;
        top: -320px;
        right: -320px;
        background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 72%);
        pointer-events: none;
    }

    .panel::after {
        top: auto;
        bottom: -340px;
        left: -340px;
        background: radial-gradient(circle at 65% 60%,rgba(123,92,251,0.28),transparent 72%);
    }

    [data-theme="dark"] .panel::before {
        background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.22),transparent 74%);
    }

    [data-theme="dark"] .panel::after {
        background: radial-gradient(circle at 65% 60%,rgba(123,92,251,0.20),transparent 74%);
    }

    h1.admin-title {
        font-size: 2.35rem;
        font-weight: 700;
        margin: 0 0 12px;
        background: linear-gradient(90deg,#5b8df9,#7b5cfb);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        letter-spacing: .5px;
    }

    [data-theme="dark"] h1.admin-title {
        background: linear-gradient(90deg,#d5e6ff,#eddfff);
        text-shadow: 0 0 7px rgba(255,255,255,0.35),0 2px 12px rgba(0,0,0,0.65);
    }

    .subtitle {
        margin: 0 0 44px;
        font-size: .95rem;
        color: var(--muted);
        max-width: 860px;
        line-height: 1.5;
    }

    [data-theme="dark"] .subtitle {
        color: #d4dee6;
    }

    .tiles {
        display: grid;
        gap: 34px;
        grid-template-columns: repeat(auto-fit,minmax(250px,1fr));
    }

    .tile {
        position: relative;
        background: var(--tile-bg);
        border: 1px solid rgba(120,140,170,0.30);
        border-radius: 28px;
        padding: 30px 26px 36px;
        text-decoration: none;
        color: var(--text);
        display: flex;
        flex-direction: column;
        gap: 16px;
        box-shadow: 0 20px 60px rgba(40,70,140,0.22);
        transition: transform .45s, box-shadow .5s, background .4s, border-color .4s;
        overflow: hidden;
        isolation: isolate;
    }

    [data-theme="dark"] .tile {
        border: 1px solid rgba(255,255,255,0.12);
        color: #f3f7fa;
        box-shadow: 0 22px 64px rgba(0,0,0,0.70);
    }

    .tile::after {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 30% 25%,rgba(91,141,249,0.25),transparent 65%);
        opacity: 0;
        transition: opacity .7s;
        mix-blend-mode: overlay;
        pointer-events: none;
    }

    [data-theme="dark"] .tile::after {
        background: radial-gradient(circle at 30% 25%,rgba(91,141,249,0.35),transparent 70%);
    }

    .tile:hover {
        transform: translateY(-12px);
        box-shadow: 0 36px 96px rgba(40,70,140,0.30);
        background: var(--tile-hover);
    }

    [data-theme="dark"] .tile:hover {
        box-shadow: 0 36px 96px rgba(0,0,0,0.78);
    }

    .tile:hover::after {
        opacity: 1;
    }

    .tile-icon {
        width: 66px;
        height: 66px;
        border-radius: 22px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--grad-main);
        color: #fff;
        font-size: 1.65rem;
        box-shadow: 0 16px 44px rgba(91,141,249,0.42);
    }

        .tile-icon.accent {
            background: var(--grad-accent);
            box-shadow: 0 16px 44px rgba(56,160,255,0.42);
        }

        .tile-icon.warn {
            background: var(--grad-warn);
            box-shadow: 0 16px 44px rgba(255,140,70,0.42);
        }

        .tile-icon.danger {
            background: var(--grad-danger);
            box-shadow: 0 16px 44px rgba(255,70,120,0.50);
        }

    .tile h3 {
        margin: 0;
        font-size: 1.18rem;
        font-weight: 600;
        letter-spacing: .45px;
    }

    .tile p {
        margin: 0;
        font-size: .82rem;
        line-height: 1.45;
        color: var(--muted);
        flex: 1;
    }

    [data-theme="dark"] .tile p {
        color: #c7d2dc;
    }

    .go-link {
        display: inline-flex;
        align-items: center;
        gap: .45rem;
        font-size: .70rem;
        letter-spacing: .6px;
        font-weight: 600;
        text-transform: uppercase;
        background: var(--grad-accent);
        color: #fff;
        padding: 10px 18px;
        border-radius: 999px;
        box-shadow: 0 12px 34px rgba(56,160,255,0.40);
        transition: .35s;
        text-decoration: none;
    }

    .tile:hover .go-link {
        transform: translateY(-4px);
        box-shadow: 0 20px 50px rgba(56,160,255,0.48);
    }

    @@keyframes adminFade {
        from {
            opacity: 0;
            transform: translateY(22px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width:980px) {
        .panel {
            padding: 56px 50px 64px;
        }
    }

    @@media (max-width:720px) {
        .panel {
            padding: 52px 40px 60px;
        }

        h1.admin-title {
            font-size: 2rem;
        }
    }

    @@media (max-width:520px) {
        .panel {
            padding: 48px 34px 56px;
        }

        .tile {
            padding: 26px 22px 32px;
        }
    }
</style>

<div class="admin-wrapper">
    <div class="panel">
        <h1 class="admin-title">Admin Dashboard</h1>
        <div class="subtitle">
            Central control panel to manage operational data: users, departments, appointments and financial records.
        </div>

        <div class="tiles">
            <a href="/Patient/Index" class="tile">
                <div class="tile-icon accent"><i class="bi bi-person-hearts"></i></div>
                <h3>Manage Patients</h3>
                <p>Add, edit or remove patient records and review profiles.</p>
                <span class="go-link"><i class="bi bi-arrow-right-circle"></i> Go</span>
            </a>

            <a href="/Doctor/Index" class="tile">
                <div class="tile-icon"><i class="bi bi-person-badge"></i></div>
                <h3>Manage Doctors</h3>
                <p>Maintain physician roster, roles and specializations.</p>
                <span class="go-link"><i class="bi bi-arrow-right-circle"></i> Go</span>
            </a>

            <a href="/Appointment/Index" class="tile">
                <div class="tile-icon warn"><i class="bi bi-calendar2-event"></i></div>
                <h3>Appointments</h3>
                <p>View and coordinate all scheduled clinical sessions.</p>
                <span class="go-link"><i class="bi bi-arrow-right-circle"></i> Go</span>
            </a>

            <a href="/Department/Index" class="tile">
                <div class="tile-icon"><i class="bi bi-diagram-3"></i></div>
                <h3>Departments</h3>
                <p>Organize and curate hospital department structures.</p>
                <span class="go-link"><i class="bi bi-arrow-right-circle"></i> Go</span>
            </a>

            <a href="/Invoice/Index" class="tile">
                <div class="tile-icon danger"><i class="bi bi-receipt"></i></div>
                <h3>Invoices</h3>
                <p>Monitor billing status and issued payments lifecycle.</p>
                <span class="go-link"><i class="bi bi-arrow-right-circle"></i> Go</span>
            </a>
        </div>
    </div>
</div>