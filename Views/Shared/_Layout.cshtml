<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalManagementSystem.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f0f2f5;
        }

        .navbar {
            background-color: #007bff;
            padding: 0.7rem 1rem;
        }

        .navbar-brand {
            color: white;
            font-weight: 600;
            font-size: 1.6rem;
        }

        .navbar-nav .nav-link, .navbar-nav .btn-logout {
            color: white !important;
            font-size: 1.1rem;
            padding: 0.5rem 0.8rem;
        }

        .btn-logout {
            background: none;
            border: none;
            cursor: pointer;
        }

        main {
            padding: 60px 0;
            min-height: 70vh;
        }

        footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            font-size: 0.9rem;
            text-align: center;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    HospitalManagementSystem
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse justify-content-end">
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                                </li>
                                @* <li class="nav-item">
                                    <a class="nav-link" asp-controller="Doctor" asp-action="Index">Manage Doctors</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Patient" asp-action="Index">Manage Patients</a>
                                </li> *@
                            }

                            @* --- Doctor Navigation --- *@
                            @if (User.IsInRole("Doctor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Doctor" asp-action="Dashboard">Doctor Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                                </li>
                            }
                            <li class="nav-item">
                                <span class="hello-user">Hello, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn-logout nav-link">Logout</button>
                                </form>
                            </li>

                            @* --- Patient Navigation --- *@
                            @if (User.IsInRole("Patient"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Patient" asp-action="Dashboard">Patient Dashboard</a>
                                </li>
                            }

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                                    Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HospitalManagementSystem - Made by Razor Rebels😁
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
