@model HospitalManagementSystem.Models.Patient

@{
    ViewData["Title"] = "Patient Details";
}

@section PageBackground {
    <div class="patient-bg-fixed" aria-hidden="true"></div>
    <div class="patient-bg-overlay" aria-hidden="true"></div>
}


<style>
    .patient-details-wrapper {
        position:relative; z-index:2;
        max-width:1000px; margin:0 auto;
        padding:24px 8px 54px;
    }
    .details-panel {
        background:linear-gradient(145deg,rgba(255,255,255,0.90),rgba(255,255,255,0.76));
        border:1px solid rgba(120,140,170,0.25);
        border-radius:34px;
        padding:52px 58px 60px;
        backdrop-filter:blur(10px); -webkit-backdrop-filter:blur(10px);
        box-shadow:0 26px 70px rgba(40,70,140,0.24);
        animation:panelRise .55s ease;
        position:relative; overflow:hidden;
    }
    .details-panel::before {
        content:""; position:absolute; width:500px;height:500px;
        top:-210px; right:-210px;
        background:radial-gradient(circle at 35% 40%,rgba(91,141,249,0.28),transparent 70%);
        pointer-events:none;
    }

    h1.details-title {
        font-size:2.1rem; font-weight:700;
        background:linear-gradient(90deg,#5b8df9,#7b5cfb);
        -webkit-background-clip:text; background-clip:text; color:transparent;
        margin:0 0 10px;
    }
    .subtitle { color:#5c6672; font-size:.9rem; margin-bottom:36px; }

    dl {
        margin:0;
        display:grid;
        grid-template-columns:200px 1fr;
        row-gap:20px; column-gap:26px;
    }
    dt { font-weight:600; color:#2a3950; letter-spacing:.45px; }
    dd { margin:0; color:#455066; }

    .action-bar { margin-top:44px; display:flex; gap:16px; flex-wrap:wrap; }

    .btn-accent {
        background:linear-gradient(135deg,#17c0b5,#3aa0ff);
        color:#fff; border:none; border-radius:18px;
        padding:14px 34px; font-weight:600; letter-spacing:.5px;
        box-shadow:0 16px 36px rgba(56,160,255,0.35);
        transition:transform .25s, box-shadow .35s, filter .25s;
    }
    .btn-accent:hover { transform:translateY(-4px); box-shadow:0 26px 56px rgba(56,160,255,0.40); filter:brightness(.97); }

    .btn-soft {
        background:linear-gradient(145deg,rgba(255,255,255,0.9),rgba(238,243,255,0.9));
        border:1px solid rgba(120,140,170,0.35);
        color:#243041; border-radius:18px;
        padding:14px 32px; font-weight:600;
        transition:transform .25s, background .25s;
    }
    .btn-soft:hover { background:linear-gradient(145deg,rgba(255,255,255,0.95),rgba(241,245,255,0.95)); transform:translateY(-2px); }

    .patient-bg-fixed {
        position:fixed; top:var(--header-height); left:0; right:0; bottom:var(--footer-height);
        background-image:url('@Url.Content("~/images/dept.png")'); background-size:cover; background-position:center; z-index:0;
    }
    .patient-bg-overlay {
        position:fixed; top:var(--header-height); left:0; right:0; bottom:var(--footer-height);
        background:linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08)); z-index:1; pointer-events:none;
    }

    @@keyframes panelRise {
        from { opacity:0; transform:translateY(18px); }
        to { opacity:1; transform:translateY(0); }
    }

    @@media (max-width:760px){
        .details-panel { padding:44px 34px 56px; }
        dl { grid-template-columns:150px 1fr; row-gap:18px; }
    }
</style>

<div class="patient-details-wrapper">
    <div class="details-panel">
        <h1 class="details-title">Patient Details</h1>
        <div class="subtitle">Profile overview and core demographics.</div>

        <dl>
            <dt>Full Name</dt>
            <dd>@Model.FullName</dd>

            <dt>Date of Birth</dt>
            <dd>@Model.DOB.ToString("dd MMM yyyy")</dd>

            <dt>Gender</dt>
            <dd>@Model.Gender</dd>

            <dt>Contact Number</dt>
            <dd>@Model.ContactNumber</dd>
        </dl>

        <div class="action-bar">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-accent">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-accent" style="background:linear-gradient(135deg,#ff6b6b,#ff3d8b); box-shadow:0 16px 36px rgba(255,75,120,0.35);">
                <i class="bi bi-trash me-1"></i> Delete
            </a>
            <a asp-action="Index" class="btn-soft">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
        </div>
    </div>
</div>
