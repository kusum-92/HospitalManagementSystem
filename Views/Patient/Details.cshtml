@model HospitalManagementSystem.Models.Patient

@{
    ViewData["Title"] = "Patient Details";
}

<div class="card shadow-sm mt-4 border-primary">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4>
            <i class="bi bi-person-circle me-2"></i>
            Patient Details
            <i class="bi bi-heart-pulse ms-2"></i>
        </h4>
        <a asp-action="Index" class="btn btn-light btn-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
        </a>
    </div>
    <div class="card-body fs-5">
        <dl class="row">
            <dt class="col-sm-4"><i class="bi bi-person-fill me-1 text-primary"></i> Full Name:</dt>
            <dd class="col-sm-8">@Model.FullName</dd>

            <dt class="col-sm-4"><i class="bi bi-calendar-event-fill me-1 text-primary"></i> Date of Birth:</dt>
            <dd class="col-sm-8">@Model.DOB.ToString("dd MMM yyyy")</dd>

            <dt class="col-sm-4"><i class="bi bi-gender-ambiguous me-1 text-primary"></i> Gender:</dt>
            <dd class="col-sm-8">@Model.Gender</dd>
            
            <dt class="col-sm-4"><i class="bi bi-telephone-fill me-1 text-primary"></i> Phone:</dt>
            <dd class="col-sm-8">@Model.ContactNumber</dd>

            
        </dl>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square me-1"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash me-1"></i> Delete
        </a>
    </div>
</div>
