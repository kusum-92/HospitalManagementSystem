@{
    ViewData["Title"] = "Patient Dashboard";
}

@section PageBackground {
    <div class="patient-bg-fixed" aria-hidden="true"></div>
    <div class="patient-bg-overlay" aria-hidden="true"></div>
}


    <style>
        :root {
            --header-height: 70px;
            --footer-height: 64px;
            --primary: #5b8df9;
            --secondary: #7b5cfb;
            --accent: #17c0b5;
            --grad-main: linear-gradient(135deg,#5b8df9,#7b5cfb);
            --grad-accent: linear-gradient(90deg,#17c0b5,#3aa0ff);
            --panel-bg: linear-gradient(145deg,rgba(255,255,255,0.90),rgba(255,255,255,0.76));
            --border-soft: 1px solid rgba(120,140,170,0.28);
            --muted: #5c6672;
            --txt: #243041;
        }

        .patient-bg-fixed {
            position: fixed;
            top: var(--header-height);
            left: 0;
            right: 0;
            bottom: var(--footer-height);
            background-image: url('@Url.Content("~/images/dept.png")');
            background-size: cover;
            background-position: center;
            z-index: 0;
        }

        .patient-bg-overlay {
            position: fixed;
            top: var(--header-height);
            left: 0;
            right: 0;
            bottom: var(--footer-height);
            background: linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08));
            z-index: 1;
            pointer-events: none;
        }

        .dashboard-wrapper {
            position: relative;
            z-index: 2;
            max-width: 1320px;
            margin: 0 auto;
            padding: 34px 10px 60px;
            min-height: calc(100vh - var(--header-height) - var(--footer-height));
            animation: dashFade .55s ease;
        }

        .hero {
            background: var(--panel-bg);
            border: var(--border-soft);
            border-radius: 34px;
            padding: 48px 56px 54px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 26px 70px rgba(40,70,140,0.24);
            position: relative;
            overflow: hidden;
            margin-bottom: 44px;
        }

            .hero::before {
                content: "";
                position: absolute;
                width: 520px;
                height: 520px;
                top: -220px;
                right: -220px;
                background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 70%);
                pointer-events: none;
            }

        h1.dash-title {
            font-size: 2.15rem;
            font-weight: 700;
            background: linear-gradient(90deg,#5b8df9,#7b5cfb);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            margin: 0 0 12px;
        }

        .subtitle {
            color: var(--muted);
            font-size: .95rem;
            margin-bottom: 22px;
        }

        .quick-grid {
            display: grid;
            gap: 26px;
            grid-template-columns: repeat(auto-fit,minmax(230px,1fr));
        }

        .tile {
            position: relative;
            background: linear-gradient(145deg,rgba(255,255,255,0.92),rgba(240,243,255,0.86));
            border: 1px solid rgba(120,140,170,0.30);
            border-radius: 24px;
            padding: 26px 24px 30px;
            box-shadow: 0 16px 46px rgba(40,70,140,0.18);
            text-decoration: none;
            color: var(--txt);
            display: flex;
            flex-direction: column;
            gap: 12px;
            transition: transform .35s, box-shadow .4s, background .35s;
            overflow: hidden;
        }

            .tile::after {
                content: "";
                position: absolute;
                inset: 0;
                background: radial-gradient(circle at 30% 25%,rgba(91,141,249,0.25),transparent 65%);
                opacity: 0;
                transition: opacity .5s;
                pointer-events: none;
            }

            .tile:hover {
                transform: translateY(-8px);
                box-shadow: 0 28px 70px rgba(40,70,140,0.28);
                background: linear-gradient(145deg,rgba(255,255,255,0.96),rgba(245,248,255,0.92));
            }

                .tile:hover::after {
                    opacity: 1;
                }

        .tile-icon {
            width: 58px;
            height: 58px;
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--grad-main);
            color: #fff;
            font-size: 1.5rem;
            box-shadow: 0 12px 32px rgba(91,141,249,0.35);
        }

        .tile h3 {
            font-size: 1.15rem;
            font-weight: 600;
            margin: 0;
            letter-spacing: .4px;
        }

        .tile p {
            margin: 0;
            font-size: .82rem;
            line-height: 1.35;
            color: var(--muted);
            flex: 1;
        }

        @@keyframes dashFade {
            from {
                opacity: 0;
                transform: translateY(18px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width:780px) {
            .hero

        {
            padding: 42px 34px 48px;
        }

        }
    </style>

    <div class="dashboard-wrapper">
        <div class="hero">
            <h1 class="dash-title">Welcome, @User.Identity.Name 👋</h1>
            <div class="subtitle">Manage your healthcare journey: appointments, invoices & account information.</div>

            <div class="quick-grid">
                <a asp-action="MyAppointments" asp-controller="Patient" class="tile">
                    <div class="tile-icon"><i class="bi bi-calendar2-event"></i></div>
                    <h3>My Appointments</h3>
                    <p>View, manage or schedule upcoming consultations.</p>
                </a>

                <a asp-action="CreateAppointment" asp-controller="Patient" class="tile">
                    <div class="tile-icon" style="background:linear-gradient(135deg,#17c0b5,#3aa0ff);"><i class="bi bi-plus-lg"></i></div>
                    <h3>Book Appointment</h3>
                    <p>Choose a doctor & preferred timeslot quickly.</p>
                </a>

                <a asp-action="MyInvoices" asp-controller="Patient" class="tile">
                    <div class="tile-icon" style="background:linear-gradient(135deg,#ff7f6b,#ff3d8b);"><i class="bi bi-receipt"></i></div>
                    <h3>My Invoices</h3>
                    <p>Track payment status and issued invoices.</p>
                </a>
            </div>
        </div>
    </div>