@model IEnumerable<HospitalManagementSystem.Models.Invoice>

@{
    ViewData["Title"] = "My Invoices";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-4">💳 My Invoices</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            You don’t have any invoices yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered shadow-sm">
                <thead class="table-primary">
                    <tr>
                        <th>Invoice #</th>
                        <th>Date Issued</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Appointment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model)
                    {
                        <tr>
                            <td>@invoice.InvoiceId</td>
                            <td>@invoice.DateIssued.ToShortDateString()</td>
                            <td>@invoice.Amount.ToString("C")</td>
                            <td>
                                @if (invoice.IsPaid)
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unpaid</span>
                                }
                            </td>
                            <td>@invoice.AppointmentId</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
