@model IEnumerable<HospitalManagementSystem.Models.Invoice>

@{
    ViewData["Title"] = "My Invoices";
}

@section PageBackground {
    <div class="patient-bg-fixed" aria-hidden="true"></div>
    <div class="patient-bg-overlay" aria-hidden="true"></div>
}


<style>
    :root {
        --header-height:70px;
        --footer-height:64px;
        --primary:#5b8df9;
        --secondary:#7b5cfb;
        --accent:#17c0b5;
        --grad-main:linear-gradient(135deg,#5b8df9,#7b5cfb);
        --grad-accent:linear-gradient(90deg,#17c0b5,#3aa0ff);
        --panel-bg:linear-gradient(145deg,rgba(255,255,255,0.90),rgba(255,255,255,0.76));
        --border-soft:1px solid rgba(120,140,170,0.28);
        --muted:#5c6672;
        --txt:#243041;
    }
    .patient-bg-fixed {
        position:fixed; top:var(--header-height); left:0; right:0; bottom:var(--footer-height);
        background-image:url('@Url.Content("~/images/dept.png")'); background-size:cover; background-position:center; z-index:0;
    }
    .patient-bg-overlay {
        position:fixed; top:var(--header-height); left:0; right:0; bottom:var(--footer-height);
        background:linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08)); z-index:1; pointer-events:none;
    }

    .invoice-wrapper {
        position:relative; z-index:2;
        max-width:1280px; margin:0 auto;
        padding:34px 10px 60px;
        min-height:calc(100vh - var(--header-height) - var(--footer-height));
    }

    .panel {
        background:var(--panel-bg);
        border:var(--border-soft);
        border-radius:30px;
        padding:46px 50px 54px;
        backdrop-filter:blur(10px); -webkit-backdrop-filter:blur(10px);
        box-shadow:0 24px 66px rgba(40,70,140,0.24);
        position:relative; overflow:hidden;
        animation:fadeInvoices .55s ease;
    }
    .panel::before {
        content:""; position:absolute; width:480px; height:480px;
        top:-210px; right:-210px;
        background:radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 70%);
        pointer-events:none;
    }

    h1.panel-title {
        font-size:2rem; font-weight:700;
        background:linear-gradient(90deg,#5b8df9,#7b5cfb);
        -webkit-background-clip:text; background-clip:text; color:transparent;
        margin:0 0 28px;
        display:flex; align-items:center; gap:.6rem;
    }

    .table-shell {
        overflow:hidden;
        border-radius:24px;
        border:1px solid rgba(120,140,170,0.30);
        background:rgba(255,255,255,0.74);
        box-shadow:0 18px 50px rgba(40,70,140,0.18);
        backdrop-filter:blur(6px); -webkit-backdrop-filter:blur(6px);
    }

    table.invoices {
        width:100%; margin:0; border-collapse:separate; border-spacing:0;
    }
    .invoices thead th {
        background:var(--grad-main);
        color:#fff; border:none;
        font-size:.75rem; font-weight:600; letter-spacing:.65px;
        padding:14px 16px; text-transform:uppercase;
    }
    .invoices tbody td {
        padding:16px;
        font-size:.9rem;
        border-top:1px solid rgba(120,140,170,0.25);
    }

    .invoices tbody tr {
        transition:background .25s, transform .25s, box-shadow .35s;
    }
    .invoices tbody tr:hover {
        background:rgba(255,255,255,0.90);
        transform:translateY(-3px);
        box-shadow:0 14px 32px rgba(40,70,140,0.20);
    }

    .badge-paid {
        background:linear-gradient(135deg,#17c0b5,#3aa0ff);
        color:#fff; padding:6px 14px;
        font-size:.65rem; letter-spacing:.55px; font-weight:600;
        border-radius:999px;
        box-shadow:0 8px 24px rgba(56,160,255,0.35);
    }
    .badge-unpaid {
        background:linear-gradient(135deg,#ffb347,#ff7b36);
        color:#fff; padding:6px 14px;
        font-size:.65rem; letter-spacing:.55px; font-weight:600;
        border-radius:999px;
        box-shadow:0 8px 24px rgba(255,140,70,0.35);
    }

    .empty-box {
        padding:50px 20px;
        text-align:center;
        font-size:.95rem;
        color:var(--muted);
        font-style:italic;
        border-radius:24px;
        background:rgba(255,255,255,0.70);
        border:1px solid rgba(120,140,170,0.30);
        box-shadow:0 18px 50px rgba(40,70,140,0.18);
        backdrop-filter:blur(6px); -webkit-backdrop-filter:blur(6px);
    }

    @@keyframes fadeInvoices {
        from { opacity:0; transform:translateY(18px); }
        to { opacity:1; transform:translateY(0); }
    }

    @@media (max-width:820px){
        .panel { padding:40px 34px 48px; }
    }
</style>

<div class="invoice-wrapper">
    <div class="panel">
        <h1 class="panel-title">
            <span style="display:inline-flex;width:46px;height:46px;align-items:center;justify-content:center;
                  background:var(--grad-main);color:#fff;border-radius:16px;box-shadow:0 12px 32px rgba(91,141,249,0.40);">
                <i class="bi bi-receipt"></i>
            </span>
            My Invoices
        </h1>

        @if (!Model.Any())
        {
            <div class="empty-box">
                You don’t have any invoices yet.
            </div>
        }
        else
        {
            <div class="table-shell">
                <table class="invoices">
                    <thead>
                        <tr>
                            <th>Invoice #</th>
                            <th>Date Issued</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Appointment</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model)
                        {
                            <tr>
                                <td>@invoice.InvoiceId</td>
                                <td>@invoice.DateIssued.ToShortDateString()</td>
                                <td>@invoice.Amount.ToString("C")</td>
                                <td>
                                    @if (invoice.IsPaid)
                                    {
                                        <span class="badge-paid">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge-unpaid">Unpaid</span>
                                    }
                                </td>
                                <td>@invoice.AppointmentId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>