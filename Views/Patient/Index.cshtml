@model IEnumerable<HospitalManagementSystem.Models.Patient>

@{
    ViewData["Title"] = "Patient List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary"><i class="bi bi-people-fill me-2"></i>Patients</h1>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-person-plus-fill me-1"></i> Add Patient
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Patient Records</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>DOB</th>
                        <th>Gender</th>
                        <th>Contact</th>
                        <th style="width: 140px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No patients found. Please add some.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var patient in Model)
                        {
                            <tr>
                                <td>@patient.FullName</td>
                                <td>@patient.DOB.ToString("dd MMM yyyy")</td>
                                <td>@patient.Gender</td>
                                <td>@patient.ContactNumber</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-sm btn-info me-1" title="View Details">
                                        <i class="bi bi-eye">Details</i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-sm btn-warning me-1" title="Edit Patient">
                                        <i class="bi bi-pencil-square">Edit</i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-sm btn-danger" title="Delete Patient">
                                        <i class="bi bi-trash">Delete</i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
