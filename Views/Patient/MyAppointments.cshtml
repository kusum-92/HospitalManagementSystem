@model IEnumerable<HospitalManagementSystem.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
}

@section PageBackground {
    <div class="patient-bg-fixed" aria-hidden="true"></div>
    <div class="patient-bg-overlay" aria-hidden="true"></div>
}


<style>
    :root {
        --header-height:70px;
        --footer-height:64px;
        --primary:#5b8df9;
        --secondary:#7b5cfb;
        --accent:#17c0b5;
        --grad-main:linear-gradient(135deg,#5b8df9,#7b5cfb);
        --grad-accent:linear-gradient(90deg,#17c0b5,#3aa0ff);
        --panel-bg:linear-gradient(145deg,rgba(255,255,255,0.90),rgba(255,255,255,0.76));
        --border-soft:1px solid rgba(120,140,170,0.28);
        --muted:#5c6672;
        --txt:#243041;
    }
    .patient-bg-fixed {
        position:fixed; top:var(--header-height); left:0; right:0; bottom:var(--footer-height);
        background-image:url('@Url.Content("~/images/dept.png")'); background-size:cover; background-position:center; z-index:0;
    }
    .patient-bg-overlay {
        position:fixed; top:var(--header-height); left:0; right:0; bottom:var(--footer-height);
        background:linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08)); z-index:1; pointer-events:none;
    }

    .appt-wrapper {
        position:relative; z-index:2;
        max-width:1280px; margin:0 auto;
        padding:32px 10px 60px;
        min-height:calc(100vh - var(--header-height) - var(--footer-height));
    }

    .panel {
        background:var(--panel-bg);
        border:var(--border-soft);
        border-radius:30px;
        padding:46px 50px 52px;
        backdrop-filter:blur(10px); -webkit-backdrop-filter:blur(10px);
        box-shadow:0 24px 64px rgba(40,70,140,0.24);
        position:relative; overflow:hidden;
        animation:risePanel .55s ease;
    }
    .panel::before {
        content:""; position:absolute; width:500px; height:500px;
        top:-210px; right:-210px;
        background:radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 70%);
        pointer-events:none;
    }

    .panel-header {
        display:flex;
        flex-wrap:wrap;
        gap:18px;
        align-items:center;
        justify-content:space-between;
        margin-bottom:30px;
    }
    h1.panel-title {
        font-size:2rem; font-weight:700;
        background:linear-gradient(90deg,#5b8df9,#7b5cfb);
        -webkit-background-clip:text; background-clip:text; color:transparent;
        display:flex; align-items:center; gap:.6rem;
        margin:0;
    }

    .btn-accent {
        background:var(--grad-accent);
        color:#fff; border:none; border-radius:18px;
        padding:14px 30px; font-weight:600; letter-spacing:.5px;
        box-shadow:0 16px 40px rgba(56,160,255,0.36);
        display:inline-flex; align-items:center; gap:.55rem;
        transition:transform .25s, box-shadow .35s, filter .25s;
        text-decoration:none;
    }
    .btn-accent:hover { transform:translateY(-4px); box-shadow:0 26px 56px rgba(56,160,255,0.42); filter:brightness(.97); }

    .table-shell {
        overflow:hidden;
        border-radius:24px;
        border:1px solid rgba(120,140,170,0.30);
        background:rgba(255,255,255,0.72);
        box-shadow:0 18px 50px rgba(40,70,140,0.18);
        backdrop-filter:blur(6px); -webkit-backdrop-filter:blur(6px);
    }

    table.appointments {
        width:100%; border-collapse:separate; border-spacing:0; margin:0;
    }
    .appointments thead th {
        background:var(--grad-main);
        color:#fff; border:none;
        letter-spacing:.65px;
        font-size:.75rem; font-weight:600;
        padding:14px 16px; text-transform:uppercase;
    }
    .appointments tbody td {
        padding:14px 16px;
        font-size:.9rem;
        border-top:1px solid rgba(120,140,170,0.25);
    }
    .appointments tbody tr {
        transition:background .25s, transform .25s, box-shadow .35s;
    }
    .appointments tbody tr:hover {
        background:rgba(255,255,255,0.90);
        transform:translateY(-3px);
        box-shadow:0 14px 32px rgba(40,70,140,0.20);
    }

    .badge-status {
        padding:6px 12px;
        font-size:.65rem;
        text-transform:uppercase;
        letter-spacing:.6px;
        font-weight:600;
        border-radius:999px;
        color:#fff;
        background:linear-gradient(135deg,#5b8df9,#7b5cfb);
        box-shadow:0 6px 20px rgba(91,141,249,0.35);
    }
    .badge-unpaid {
        background:linear-gradient(135deg,#ffb347,#ff7b36);
        box-shadow:0 6px 20px rgba(255,140,70,0.35);
    }

    .row-empty td {
        padding:48px 16px;
        text-align:center;
        font-size:.95rem;
        color:var(--muted);
        font-style:italic;
    }

    .btn-row {
        --bgrad:linear-gradient(135deg,#5b8df9,#7b5cfb);
        background:var(--bgrad);
        color:#fff;
        font-size:.65rem;
        font-weight:600;
        padding:8px 14px;
        border:none;
        border-radius:12px;
        text-decoration:none;
        letter-spacing:.5px;
        display:inline-flex;
        align-items:center;
        gap:.35rem;
        box-shadow:0 8px 24px rgba(91,141,249,0.34);
        transition:transform .25s, box-shadow .35s;
    }
    .btn-row:hover { transform:translateY(-3px); box-shadow:0 16px 34px rgba(91,141,249,0.40); }
    .btn-row.alt {
        --bgrad:linear-gradient(135deg,#8c5bfb,#b05bff);
        box-shadow:0 8px 24px rgba(140,91,251,0.34);
    }
    .btn-row.danger {
        --bgrad:linear-gradient(135deg,#ff6b6b,#ff3d8b);
        box-shadow:0 8px 24px rgba(255,70,120,0.38);
    }

    @@keyframes risePanel {
        from { opacity:0; transform:translateY(18px); }
        to { opacity:1; transform:translateY(0); }
    }

    @@media (max-width:820px){
        .panel { padding:40px 34px 48px; }
    }
</style>

<div class="appt-wrapper">
    <div class="panel">
        <div class="panel-header">
            <h1 class="panel-title">
                <span style="display:inline-flex;width:46px;height:46px;align-items:center;justify-content:center;
                      background:var(--grad-main);color:#fff;border-radius:16px;box-shadow:0 12px 32px rgba(91,141,249,0.40);">
                    <i class="bi bi-calendar2-week"></i>
                </span>
                My Appointments
            </h1>
            <a asp-controller="Patient" asp-action="CreateAppointment" class="btn-accent">
                <i class="bi bi-calendar-plus"></i> New Appointment
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="table-shell" style="padding:50px 20px;text-align:center;font-size:.95rem;color:var(--muted);font-style:italic;">
                You don’t have any appointments scheduled.
            </div>
        }
        else
        {
            <div class="table-shell">
                <table class="appointments">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Date</th>
                            <th>Doctor</th>
                            <th>Specialization</th>
                            <th>Invoice</th>
                            <th style="width:210px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model)
                        {
                            <tr>
                                <td>@appointment.AppointmentId</td>
                                <td>@appointment.AppointmentDate.ToString("dd MMM yyyy hh:mm tt")</td>
                                <td>@appointment.Doctor?.FullName</td>
                                <td>@appointment.Doctor?.Specialization</td>
                                <td>
                                    @if (appointment.Invoice?.IsPaid == true)
                                    {
                                        <span class="badge-status">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge-status badge-unpaid">Unpaid</span>
                                    }
                                </td>
                                <td style="display:flex;flex-wrap:wrap;gap:6px;">
                                    <a asp-controller="Appointment" asp-action="Details" asp-route-id="@appointment.AppointmentId" class="btn-row">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-controller="Appointment" asp-action="Edit" asp-route-id="@appointment.AppointmentId" class="btn-row alt">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Appointment" asp-action="Delete" asp-route-id="@appointment.AppointmentId" class="btn-row danger">
                                        <i class="bi bi-trash"></i> Del
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>