@model HospitalManagementSystem.Models.Patient

@{
    ViewData["Title"] = "Register Patient";
}

<h2>Register Patient</h2>

<form asp-action="RegisterPatient" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DOB" class="form-label"></label>
        <input asp-for="DOB" type="date" class="form-control" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-select">
            <option value="">-- Select Gender --</option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ContactNumber" class="form-label"></label>
        <input asp-for="ContactNumber" class="form-control" />
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
    <a asp-action="LoginPatient" class="btn btn-secondary">Back to Login</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
