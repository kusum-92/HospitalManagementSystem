@model HospitalManagementSystem.Models.Invoice

@{
    ViewData["Title"] = "Delete Invoice";
}

<h2>Delete Invoice</h2>

<h4>Are you sure you want to delete this invoice?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Date Issued</dt>
        <dd class="col-sm-10">@Model.DateIssued.ToShortDateString()</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Paid</dt>
        <dd class="col-sm-10">@Model.IsPaid</dd>

        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.Patient.FullName</dd>

        <dt class="col-sm-2">Appointment Date</dt>
        <dd class="col-sm-10">@Model.Appointment.AppointmentDate</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="InvoiceId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
