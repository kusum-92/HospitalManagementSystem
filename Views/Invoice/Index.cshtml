@model IEnumerable<HospitalManagementSystem.Models.Invoice>
@{
    ViewData["Title"] = "Invoices";
}

@section PageBackground {
    <div class="invoice-bg-fixed" aria-hidden="true"></div>
    <div class="invoice-bg-overlay" aria-hidden="true"></div>
}

<style>
    :root {
        --header-height: 70px;
        --footer-height: 64px;
        --primary: #5b8df9;
        --secondary: #7b5cfb;
        --accent: #17c0b5;
        --grad-main: linear-gradient(135deg,#5b8df9,#7b5cfb);
        --grad-accent: linear-gradient(90deg,#17c0b5,#3aa0ff);
        --panel-bg: linear-gradient(145deg,rgba(255,255,255,0.92),rgba(255,255,255,0.80));
        --muted: #5c6672;
        --text: #243041;
    }

    [data-theme="dark"] :root {
        --panel-bg: linear-gradient(145deg,rgba(34,46,60,0.94),rgba(26,36,48,0.90));
        --muted: #c2ced8;
        --text: #f3f7fa;
    }

    .invoice-bg-fixed {
        position: fixed;
        top: var(--header-height);
        left: 0;
        right: 0;
        bottom: var(--footer-height);
        background-image: url('@Url.Content("~/images/dept.png")');
        background-size: cover;
        background-position: center;
        z-index: 0;
    }

    .invoice-bg-overlay {
        position: fixed;
        top: var(--header-height);
        left: 0;
        right: 0;
        bottom: var(--footer-height);
        background: linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08));
        z-index: 1;
        pointer-events: none;
    }

    [data-theme="dark"] .invoice-bg-overlay {
        background: linear-gradient(to bottom,rgba(0,0,0,0.55),rgba(0,0,0,0.38));
    }

    .invoice-wrapper {
        position: relative;
        z-index: 2;
        max-width: 1350px;
        margin: 0 auto;
        padding: 40px 14px 70px;
        min-height: calc(100vh - var(--header-height) - var(--footer-height));
    }

    .panel {
        background: var(--panel-bg);
        border: 1px solid rgba(120,140,170,0.30);
        border-radius: 38px;
        padding: 60px 64px 66px;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 34px 88px rgba(40,70,140,0.28);
        position: relative;
        overflow: hidden;
        animation: invFade .55s ease;
    }

    [data-theme="dark"] .panel {
        border: 1px solid rgba(255,255,255,0.12);
        box-shadow: 0 36px 92px rgba(0,0,0,0.75);
    }

    .panel::before {
        content: "";
        position: absolute;
        width: 720px;
        height: 720px;
        top: -320px;
        right: -320px;
        background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 72%);
        pointer-events: none;
    }

    [data-theme="dark"] .panel::before {
        background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.22),transparent 74%);
    }

    .panel-header {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 34px;
    }

    h1.panel-title {
        margin: 0;
        font-size: 2.05rem;
        font-weight: 700;
        background: linear-gradient(90deg,#5b8df9,#7b5cfb);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        display: flex;
        gap: .65rem;
        align-items: center;
    }

    [data-theme="dark"] h1.panel-title {
        background: linear-gradient(90deg,#d5e6ff,#eddfff);
        text-shadow: 0 0 6px rgba(255,255,255,0.35),0 2px 10px rgba(0,0,0,0.65);
    }

    .table-shell {
        overflow: hidden;
        border-radius: 28px;
        border: 1px solid rgba(120,140,170,0.30);
        background: rgba(255,255,255,0.78);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
        box-shadow: 0 22px 64px rgba(40,70,140,0.22);
    }

    [data-theme="dark"] .table-shell {
        background: rgba(44,58,76,0.80);
        border: 1px solid rgba(255,255,255,0.12);
        box-shadow: 0 22px 64px rgba(0,0,0,0.65);
    }

    table.invoice-table {
        width: 100%;
        margin: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

    .invoice-table thead th {
        background: var(--grad-main);
        color: #fff;
        border: none;
        font-size: .72rem;
        font-weight: 600;
        letter-spacing: .6px;
        padding: 14px 16px;
        text-transform: uppercase;
    }

    .invoice-table tbody td {
        padding: 14px 16px;
        font-size: .9rem;
        border-top: 1px solid rgba(120,140,170,0.26);
        vertical-align: middle;
        color: var(--text);
    }

    [data-theme="dark"] .invoice-table tbody td {
        border-top: 1px solid rgba(255,255,255,0.14);
        color: #eef4f9;
    }

    .invoice-table tbody tr {
        transition: background .25s, transform .25s, box-shadow .4s;
    }

        .invoice-table tbody tr:hover {
            background: rgba(255,255,255,0.92);
            transform: translateY(-3px);
            box-shadow: 0 14px 36px rgba(40,70,140,0.25);
        }

    [data-theme="dark"] .invoice-table tbody tr:hover {
        background: rgba(56,70,88,0.96);
        box-shadow: 0 14px 36px rgba(0,0,0,0.65);
    }

    .badge-paid, .badge-unpaid {
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        padding: 6px 14px;
        border-radius: 999px;
        font-size: .63rem;
        font-weight: 600;
        letter-spacing: .55px;
        color: #fff;
    }

    .badge-paid {
        background: linear-gradient(135deg,#17c0b5,#3aa0ff);
        box-shadow: 0 8px 24px rgba(56,160,255,0.38);
    }

    .badge-unpaid {
        background: linear-gradient(135deg,#ffb347,#ff7b36);
        box-shadow: 0 8px 24px rgba(255,140,70,0.42);
    }

    .btn-row {
        background: linear-gradient(135deg,#5b8df9,#7b5cfb);
        color: #fff;
        font-size: .65rem;
        font-weight: 600;
        padding: 8px 14px;
        border: none;
        border-radius: 12px;
        text-decoration: none;
        letter-spacing: .5px;
        display: inline-flex;
        align-items: center;
        gap: .35rem;
        box-shadow: 0 8px 24px rgba(91,141,249,0.34);
        transition: transform .25s, box-shadow .35s;
    }

        .btn-row:hover {
            transform: translateY(-3px);
            box-shadow: 0 16px 34px rgba(91,141,249,0.42);
        }

        .btn-row.pay {
            background: linear-gradient(135deg,#17c0b5,#3aa0ff);
            box-shadow: 0 8px 24px rgba(56,160,255,0.38);
        }

    .empty-state {
        padding: 70px 28px;
        text-align: center;
        border: 1px dashed rgba(120,140,170,0.40);
        border-radius: 26px;
        background: linear-gradient(145deg,rgba(255,255,255,0.85),rgba(240,244,255,0.82));
        font-style: italic;
        color: var(--muted);
    }

    [data-theme="dark"] .empty-state {
        background: linear-gradient(145deg,rgba(42,56,72,0.85),rgba(34,46,60,0.82));
        border: 1px dashed rgba(255,255,255,0.20);
        color: #c5d2df;
    }

    @@keyframes invFade {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width:820px) {
        .panel {
            padding: 52px 44px 60px;
        }
    }

    @@media (max-width:560px) {
        .panel {
            padding: 46px 34px 54px;
        }

        h1.panel-title {
            font-size: 1.75rem;
        }
    }
</style>

<div class="invoice-wrapper">
    <div class="panel">
        <div class="panel-header">
            <h1 class="panel-title">
                <span style="display:inline-flex;width:50px;height:50px;align-items:center;justify-content:center;
                      background:var(--grad-main);color:#fff;border-radius:18px;box-shadow:0 12px 34px rgba(91,141,249,0.40);">
                    <i class="bi bi-receipt"></i>
                </span>
                Invoices
            </h1>
            <div style="display:flex;gap:12px;flex-wrap:wrap;">
                <a asp-action="Unpaid" class="btn-row pay"><i class="bi bi-exclamation-circle"></i> Unpaid</a>
                @* <a asp-action="ByPatient" class="btn-row"><i class="bi bi-person-hearts"></i> By Patient</a> *@
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="empty-state">
                No invoices found.
            </div>
        }
        else
        {
            <div class="table-shell">
                <table class="invoice-table">
                    <thead>
                        <tr>
                            <th>Invoice #</th>
                            <th>Date Issued</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Patient</th>
                            <th>Appointment</th>
                            <th style="width:200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model)
                        {
                            <tr>
                                <td>@invoice.InvoiceId</td>
                                <td>@invoice.DateIssued.ToShortDateString()</td>
                                <td>@invoice.Amount.ToString("C")</td>
                                <td>
                                    @if (invoice.IsPaid)
                                    {
                                        <span class="badge-paid"><i class="bi bi-check2-circle"></i> Paid</span>
                                    }
                                    else
                                    {

                                        <span class="badge-unpaid"><i class="bi bi-exclamation-triangle"></i> Unpaid</span>
                                    }
                                </td>
                                <td>@invoice.Patient?.FullName</td>
                                <td>@invoice.AppointmentId</td>
                                <td style="display:flex;flex-wrap:wrap;gap:6px;">
                                    <a asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn-row">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    @if (!invoice.IsPaid)
                                    {
                                        <a asp-action="MarkAsPaid" asp-route-id="@invoice.InvoiceId" class="btn-row pay">
                                            <i class="bi bi-cash-coin"></i> Pay
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>