@model IEnumerable<HospitalManagementSystem.Models.Invoice>
@{
    ViewData["Title"] = "Invoices";
}
<h2>Invoices</h2>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Invoice #</th>
            <th>Date Issued</th>
            <th>Amount</th>
            <th>Paid</th>
            <th>Patient</th>
            <th>Appointment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.DateIssued.ToShortDateString()</td>
                <td>@invoice.Amount.ToString("C")</td>
                <td>
                    @if (invoice.IsPaid)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">No</span>
                    }
                </td>
                <td>@invoice.Patient?.FullName</td>
                <td>@invoice.AppointmentId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn btn-info btn-sm">Details</a>
                    @if (!invoice.IsPaid)
                    {
                        <a asp-action="MarkAsPaid" asp-route-id="@invoice.InvoiceId" class="btn btn-success btn-sm">Mark as Paid</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>