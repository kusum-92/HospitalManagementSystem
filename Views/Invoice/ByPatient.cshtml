@model IEnumerable<HospitalManagementSystem.Models.Invoice>
@{
    ViewData["Title"] = "Invoices by Patient";
}
<h2>Invoices for Patient</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Invoice #</th>
            <th>Date Issued</th>
            <th>Amount</th>
            <th>Paid</th>
            <th>Appointment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var invoice in Model)
    {
        <tr>
            <td>@invoice.InvoiceId</td>
            <td>@invoice.DateIssued.ToShortDateString()</td>
            <td>@invoice.Amount.ToString("C")</td>
            <td>@(invoice.IsPaid ? "Yes" : "No")</td>
            <td>@invoice.AppointmentId</td>
            <td>
                <a asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn btn-info btn-sm">Details</a>
                @if (invoice.IsPaid)
                {
                    <form asp-action="MarkAsUnpaid" asp-route-id="@invoice.InvoiceId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning btn-sm">Mark as Unpaid</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>