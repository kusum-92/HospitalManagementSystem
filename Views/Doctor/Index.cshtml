@model IEnumerable<HospitalManagementSystem.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
}

<h1>Doctor Management</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Specialization)</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
            <td>@item.Department?.Name</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DoctorId }) |
                @Html.ActionLink("Details", "Details", new { id = item.DoctorId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DoctorId })
            </td>
        </tr>
    }
    </tbody>
</table>