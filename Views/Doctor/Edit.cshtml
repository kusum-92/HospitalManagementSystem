@model HospitalManagementSystem.Models.Doctor

@{
    ViewData["Title"] = "Edit Doctor";
}

<h1>Edit Doctor</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DoctorId" />
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialization"></label>
        <input asp-for="Specialization" class="form-control" />
        <span asp-validation-for="Specialization" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>