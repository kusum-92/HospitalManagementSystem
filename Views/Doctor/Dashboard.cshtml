@{
    ViewData["Title"] = "Doctor Dashboard";
}

@section PageBackground {
    <div class="doctor-bg-fixed" aria-hidden="true"></div>
    <div class="doctor-bg-overlay" aria-hidden="true"></div>
}


    <style>
        :root {
            --header-height: 70px;
            --footer-height: 64px;
            --primary: #5b8df9;
            --secondary: #7b5cfb;
            --accent: #17c0b5;
            --grad-main: linear-gradient(135deg,#5b8df9,#7b5cfb);
            --grad-accent: linear-gradient(90deg,#17c0b5,#3aa0ff);
            --panel-bg: linear-gradient(145deg,rgba(255,255,255,0.90),rgba(255,255,255,0.76));
            --tile-bg: linear-gradient(145deg,rgba(255,255,255,0.92),rgba(240,243,255,0.86));
            --tile-bg-hover: linear-gradient(145deg,rgba(255,255,255,0.96),rgba(246,248,255,0.94));
            --muted: #5c6672;
            --text: #243041;
        }

        [data-theme="dark"] :root {
            --panel-bg: linear-gradient(145deg,rgba(34,46,60,0.92),rgba(28,38,50,0.90));
            --tile-bg: linear-gradient(145deg,rgba(44,58,76,0.92),rgba(36,48,64,0.88));
            --tile-bg-hover: linear-gradient(145deg,rgba(54,68,88,0.96),rgba(42,54,70,0.92));
            --muted: #c2ced8;
            --text: #f3f7fa;
        }

        .doctor-bg-fixed {
            position: fixed;
            top: var(--header-height);
            left: 0;
            right: 0;
            bottom: var(--footer-height);
            background-image: url('@Url.Content("~/images/dept.png")');
            background-size: cover;
            background-position: center;
            z-index: 0;
        }

        .doctor-bg-overlay {
            position: fixed;
            top: var(--header-height);
            left: 0;
            right: 0;
            bottom: var(--footer-height);
            background: linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08));
            z-index: 1;
            pointer-events: none;
        }

        [data-theme="dark"] .doctor-bg-overlay {
            background: linear-gradient(to bottom,rgba(0,0,0,0.55),rgba(0,0,0,0.38));
        }

        .dashboard-wrapper {
            position: relative;
            z-index: 2;
            max-width: 1320px;
            margin: 0 auto;
            padding: 36px 12px 64px;
            min-height: calc(100vh - var(--header-height) - var(--footer-height));
            animation: fadeDash .55s ease;
        }

        .panel {
            background: var(--panel-bg);
            border: 1px solid rgba(120,140,170,0.28);
            border-radius: 36px;
            padding: 56px 58px 62px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 30px 78px rgba(40,70,140,0.26);
            position: relative;
            overflow: hidden;
        }

        [data-theme="dark"] .panel {
            border: 1px solid rgba(255,255,255,0.10);
            box-shadow: 0 30px 78px rgba(0,0,0,0.70);
        }

        .panel::before {
            content: "";
            position: absolute;
            width: 600px;
            height: 600px;
            top: -270px;
            right: -270px;
            background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 72%);
            pointer-events: none;
        }

        [data-theme="dark"] .panel::before {
            background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.22),transparent 74%);
        }

        h1.title {
            font-size: 2.15rem;
            font-weight: 700;
            margin: 0 0 14px;
            background: linear-gradient(90deg,#5b8df9,#7b5cfb);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        [data-theme="dark"] h1.title {
            background: linear-gradient(90deg,#d5e6ff,#eddfff);
            text-shadow: 0 0 6px rgba(255,255,255,0.35),0 2px 10px rgba(0,0,0,0.65);
        }

        .subtitle {
            color: var(--muted);
            font-size: .95rem;
            margin: 0 0 34px;
            max-width: 760px;
        }

        [data-theme="dark"] .subtitle {
            color: #d6e0e9;
        }

        .tiles {
            display: grid;
            gap: 30px;
            grid-template-columns: repeat(auto-fit,minmax(250px,1fr));
        }

        .tile {
            position: relative;
            background: var(--tile-bg);
            border: 1px solid rgba(120,140,170,0.30);
            border-radius: 26px;
            padding: 28px 26px 34px;
            box-shadow: 0 20px 60px rgba(40,70,140,0.20);
            display: flex;
            flex-direction: column;
            gap: 14px;
            text-decoration: none;
            color: var(--text);
            transition: transform .35s,box-shadow .45s,background .35s,border-color .35s;
            overflow: hidden;
        }

        [data-theme="dark"] .tile {
            border: 1px solid rgba(255,255,255,0.10);
            color: #f3f7fa;
            box-shadow: 0 22px 62px rgba(0,0,0,0.65);
        }

        .tile::after {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 30% 25%,rgba(91,141,249,0.25),transparent 65%);
            opacity: 0;
            transition: opacity .6s;
            pointer-events: none;
            mix-blend-mode: overlay;
        }

        .tile:hover {
            transform: translateY(-10px);
            box-shadow: 0 32px 86px rgba(40,70,140,0.30);
            background: var(--tile-bg-hover);
        }

        [data-theme="dark"] .tile:hover {
            box-shadow: 0 32px 86px rgba(0,0,0,0.75);
        }

        .tile:hover::after {
            opacity: 1;
        }

        .tile-icon {
            width: 62px;
            height: 62px;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--grad-main);
            color: #fff;
            font-size: 1.55rem;
            box-shadow: 0 14px 40px rgba(91,141,249,0.40);
        }

        .tile h3 {
            margin: 0;
            font-size: 1.15rem;
            font-weight: 600;
            letter-spacing: .45px;
        }

        .tile p {
            margin: 0;
            font-size: .82rem;
            line-height: 1.4;
            color: var(--muted);
            flex: 1;
        }

        [data-theme="dark"] .tile p {
            color: #c9d5df;
        }

        @@keyframes fadeDash {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        @@media (max-width:820px) {
            .panel

        {
            padding: 48px 40px 56px;
        }

        }
    </style>

    <div class="dashboard-wrapper">
        <div class="panel">
            <h1 class="title">Doctor Dashboard</h1>
            <div class="subtitle">Access your core tools: monitor patients, review appointments, and manage clinical workflow efficiently.</div>

            <div class="tiles">
                <a href="/Doctor/MyPatients" class="tile">
                    <div class="tile-icon"><i class="bi bi-people-fill"></i></div>
                    <h3>My Patients</h3>
                    <p>Review demographics & quickly scan patient contact details.</p>
                </a>
                <a href="/Doctor/MyAppointments" class="tile">
                    <div class="tile-icon" style="background:linear-gradient(135deg,#17c0b5,#3aa0ff);"><i class="bi bi-calendar2-week"></i></div>
                    <h3>Appointments</h3>
                    <p>Track upcoming visits & confirm session readiness.</p>
                </a>
            </div>
        </div>
    </div>