@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Doctor Dashboard</h2>

    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">My Patients</h5>
                    <p class="card-text">View details of your assigned patients.</p>
                    <a href="/Doctor/MyPatients" class="btn btn-success">View Patients</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">Appointments</h5>
                    <p class="card-text">Check and manage your appointments.</p>
                    <a href="/Doctor/MyAppointments" class="btn btn-success">View Appointments</a>
                </div>
            </div>
        </div>
    </div>
</div>
