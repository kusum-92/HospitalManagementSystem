@{
}
@model IEnumerable<HospitalManagementSystem.Models.Appointment>
<h2>My Appointments</h2>
<table class="table">
    <thead><tr><th>Date</th><th>Patient</th><th>Invoice</th><th></th></tr></thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.AppointmentDate.ToString("dd MMM yyyy hh:mm tt")</td>
                <td>@a.Patient?.FullName</td>
                <td>@(a.Invoice?.IsPaid == true ? "Paid" : "Unpaid")</td>
            </tr>
        }
    </tbody>
</table>
