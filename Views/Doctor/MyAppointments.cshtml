@model IEnumerable<HospitalManagementSystem.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
}

@section PageBackground {
    <div class="doctor-bg-fixed" aria-hidden="true"></div>
    <div class="doctor-bg-overlay" aria-hidden="true"></div>
}


    <style>
        :root {
            --header-height: 70px;
            --footer-height: 64px;
            --primary: #5b8df9;
            --secondary: #7b5cfb;
            --accent: #17c0b5;
            --grad-main: linear-gradient(135deg,#5b8df9,#7b5cfb);
            --grad-accent: linear-gradient(90deg,#17c0b5,#3aa0ff);
            --panel-bg: linear-gradient(145deg,rgba(255,255,255,0.90),rgba(255,255,255,0.74));
            --muted: #5c6672;
            --text: #243041;
        }

        [data-theme="dark"] :root {
            --panel-bg: linear-gradient(145deg,rgba(34,46,60,0.92),rgba(26,36,48,0.90));
            --muted: #c2ced8;
            --text: #f3f7fa;
        }

        .doctor-bg-fixed {
            position: fixed;
            top: var(--header-height);
            left: 0;
            right: 0;
            bottom: var(--footer-height);
            background-image: url('@Url.Content("~/images/dept.png")');
            background-size: cover;
            background-position: center;
            z-index: 0;
        }

        .doctor-bg-overlay {
            position: fixed;
            top: var(--header-height);
            left: 0;
            right: 0;
            bottom: var(--footer-height);
            background: linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08));
            z-index: 1;
            pointer-events: none;
        }

        [data-theme="dark"] .doctor-bg-overlay {
            background: linear-gradient(to bottom,rgba(0,0,0,0.55),rgba(0,0,0,0.35));
        }

        .appt-wrapper {
            position: relative;
            z-index: 2;
            max-width: 1280px;
            margin: 0 auto;
            padding: 34px 10px 64px;
            min-height: calc(100vh - var(--header-height) - var(--footer-height));
        }

        .panel {
            background: var(--panel-bg);
            border: 1px solid rgba(120,140,170,0.28);
            border-radius: 32px;
            padding: 52px 56px 58px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 28px 74px rgba(40,70,140,0.26);
            position: relative;
            overflow: hidden;
            animation: fadeDocAppts .55s ease;
        }

        [data-theme="dark"] .panel {
            border: 1px solid rgba(255,255,255,0.10);
            box-shadow: 0 28px 74px rgba(0,0,0,0.70);
        }

        .panel::before {
            content: "";
            position: absolute;
            width: 600px;
            height: 600px;
            top: -270px;
            right: -270px;
            background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 72%);
            pointer-events: none;
        }

        [data-theme="dark"] .panel::before {
            background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.22),transparent 74%);
        }

        h1.title {
            font-size: 2rem;
            font-weight: 700;
            margin: 0 0 30px;
            background: linear-gradient(90deg,#5b8df9,#7b5cfb);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        [data-theme="dark"] h1.title {
            background: linear-gradient(90deg,#d5e6ff,#eddfff);
            text-shadow: 0 0 6px rgba(255,255,255,0.35),0 2px 10px rgba(0,0,0,0.65);
        }

        .table-shell {
            overflow: hidden;
            border-radius: 26px;
            border: 1px solid rgba(120,140,170,0.30);
            background: rgba(255,255,255,0.74);
            backdrop-filter: blur(6px);
            -webkit-backdrop-filter: blur(6px);
            box-shadow: 0 20px 60px rgba(40,70,140,0.20);
        }

        [data-theme="dark"] .table-shell {
            background: rgba(44,58,76,0.78);
            border: 1px solid rgba(255,255,255,0.10);
            box-shadow: 0 20px 60px rgba(0,0,0,0.65);
        }

        table.appt-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin: 0;
        }

        .appt-table thead th {
            background: var(--grad-main);
            color: #fff;
            border: none;
            font-size: .72rem;
            font-weight: 600;
            letter-spacing: .6px;
            padding: 14px 16px;
            text-transform: uppercase;
        }

        .appt-table tbody td {
            padding: 14px 16px;
            font-size: .9rem;
            border-top: 1px solid rgba(120,140,170,0.25);
            color: var(--text);
        }

        [data-theme="dark"] .appt-table tbody td {
            border-top: 1px solid rgba(255,255,255,0.12);
            color: #eef4f9;
        }

        .appt-table tbody tr {
            transition: background .25s,transform .25s,box-shadow .35s;
        }

            .appt-table tbody tr:hover {
                background: rgba(255,255,255,0.90);
                transform: translateY(-3px);
                box-shadow: 0 14px 32px rgba(40,70,140,0.20);
            }

        [data-theme="dark"] .appt-table tbody tr:hover {
            background: rgba(56,70,88,0.95);
            box-shadow: 0 14px 32px rgba(0,0,0,0.60);
        }

        .badge-paid, .badge-unpaid {
            padding: 6px 14px;
            font-size: .63rem;
            letter-spacing: .55px;
            font-weight: 600;
            border-radius: 999px;
            color: #fff;
            display: inline-flex;
            align-items: center;
            gap: .4rem;
        }

        .badge-paid {
            background: linear-gradient(135deg,#17c0b5,#3aa0ff);
            box-shadow: 0 8px 24px rgba(56,160,255,0.38);
        }

        .badge-unpaid {
            background: linear-gradient(135deg,#ffb347,#ff7b36);
            box-shadow: 0 8px 24px rgba(255,140,70,0.42);
        }

        @@keyframes fadeDocAppts {
            from {
                opacity: 0;
                transform: translateY(18px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        @@media (max-width:820px) {
            .panel

        {
            padding: 46px 40px 56px;
        }

        }
    </style>

    <div class="appt-wrapper">
        <div class="panel">
            <h1 class="title">My Appointments</h1>
            <div class="table-shell">
                <table class="appt-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Patient</th>
                            <th>Invoice</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model)
                        {
                            <tr>
                                <td>@a.AppointmentDate.ToString("dd MMM yyyy hh:mm tt")</td>
                                <td>@a.Patient?.FullName</td>
                                <td>
                                    @if (a.Invoice?.IsPaid == true)
                                    {
                                        <span class="badge-paid"><i class="bi bi-check-circle"></i> Paid</span>
                                    }
                                    else
                                    {

                                        <span class="badge-unpaid"><i class="bi bi-exclamation-circle"></i> Unpaid</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>