@model HospitalManagementSystem.Models.Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

@section PageBackground {
    <div class="doctor-bg-fixed" aria-hidden="true"></div>
    <div class="doctor-bg-overlay" aria-hidden="true"></div>
}


    <style>
        :root {
            --header-height: 70px;
            --footer-height: 64px;
            --primary: #5b8df9;
            --secondary: #7b5cfb;
            --accent: #17c0b5;
            --grad-main: linear-gradient(135deg,#5b8df9,#7b5cfb);
            --grad-accent: linear-gradient(90deg,#17c0b5,#3aa0ff);
            --panel-bg: linear-gradient(145deg,rgba(255,255,255,0.90),rgba(255,255,255,0.76));
            --muted: #5c6672;
            --text: #243041;
        }

        [data-theme="dark"] :root {
            --panel-bg: linear-gradient(145deg,rgba(34,46,60,0.92),rgba(26,36,48,0.90));
            --muted: #c2ced8;
            --text: #f3f7fa;
        }

        .doctor-bg-fixed {
            position: fixed;
            top: var(--header-height);
            left: 0;
            right: 0;
            bottom: var(--footer-height);
            background-image: url('@Url.Content("~/images/dept.png")');
            background-size: cover;
            background-position: center;
            z-index: 0;
        }

        .doctor-bg-overlay {
            position: fixed;
            top: var(--header-height);
            left: 0;
            right: 0;
            bottom: var(--footer-height);
            background: linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08));
            z-index: 1;
            pointer-events: none;
        }

        [data-theme="dark"] .doctor-bg-overlay {
            background: linear-gradient(to bottom,rgba(0,0,0,0.55),rgba(0,0,0,0.35));
        }

        .details-wrapper {
            position: relative;
            z-index: 2;
            max-width: 900px;
            margin: 0 auto;
            padding: 38px 8px 64px;
        }

        .panel {
            background: var(--panel-bg);
            border: 1px solid rgba(120,140,170,0.28);
            border-radius: 34px;
            padding: 58px 60px 66px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 28px 74px rgba(40,70,140,0.26);
            position: relative;
            overflow: hidden;
            animation: fadeDocDetails .55s ease;
        }

        [data-theme="dark"] .panel {
            border: 1px solid rgba(255,255,255,0.10);
            box-shadow: 0 28px 74px rgba(0,0,0,0.72);
        }

        .panel::before {
            content: "";
            position: absolute;
            width: 580px;
            height: 580px;
            top: -260px;
            right: -260px;
            background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 70%);
            pointer-events: none;
        }

        .panel::after {
            content: "";
            position: absolute;
            width: 540px;
            height: 540px;
            bottom: -260px;
            left: -260px;
            background: radial-gradient(circle at 60% 60%,rgba(123,92,251,0.24),transparent 72%);
            pointer-events: none;
        }

        [data-theme="dark"] .panel::before {
            background: radial-gradient(circle at 35% 40%,rgba(91,141,249,0.22),transparent 72%);
        }

        [data-theme="dark"] .panel::after {
            background: radial-gradient(circle at 60% 60%,rgba(123,92,251,0.18),transparent 74%);
        }

        h1.title {
            font-size: 2.1rem;
            font-weight: 700;
            margin: 0 0 20px;
            background: linear-gradient(90deg,#5b8df9,#7b5cfb);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        [data-theme="dark"] h1.title {
            background: linear-gradient(90deg,#d5e6ff,#eddfff);
            text-shadow: 0 0 6px rgba(255,255,255,0.35),0 2px 10px rgba(0,0,0,0.65);
        }

        dl {
            margin: 0;
            display: grid;
            grid-template-columns: 200px 1fr;
            row-gap: 20px;
            column-gap: 26px;
        }

        dt {
            font-weight: 600;
            color: #2a3950;
            letter-spacing: .45px;
        }

        dd {
            margin: 0;
            color: #455066;
        }

        [data-theme="dark"] dt {
            color: #f0f4f9;
        }

        [data-theme="dark"] dd {
            color: #d5dee6;
        }

        .actions {
            margin-top: 44px;
            display: flex;
            gap: 16px;
            flex-wrap: wrap;
            justify-content: flex-end;
        }

        .btn-soft {
            background: linear-gradient(145deg,rgba(255,255,255,0.90),rgba(236,242,255,0.88));
            border: 1px solid rgba(120,140,170,0.35);
            color: var(--text);
            border-radius: 18px;
            padding: 12px 26px;
            font-weight: 600;
            text-decoration: none;
            transition: .3s;
        }

            .btn-soft:hover {
                transform: translateY(-3px);
                background: linear-gradient(145deg,rgba(255,255,255,0.96),rgba(241,246,255,0.96));
            }

        [data-theme="dark"] .btn-soft {
            background: linear-gradient(145deg,rgba(46,60,78,0.90),rgba(38,50,66,0.88));
            border: 1px solid rgba(255,255,255,0.12);
            color: #e9f2f9;
        }

            [data-theme="dark"] .btn-soft:hover {
                background: linear-gradient(145deg,rgba(54,68,88,0.96),rgba(44,58,76,0.94));
            }

        @@keyframes fadeDocDetails {
            from {
                opacity: 0;
                transform: translateY(18px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        @@media (max-width:820px) {
            .panel

        {
            padding: 50px 42px 58px;
        }

        dl {
            grid-template-columns: 160px 1fr;
            row-gap: 18px;
        }

        }
    </style>

    <div class="details-wrapper">
        <div class="panel">
            <h1 class="title">Doctor Details</h1>

            <dl class="mb-4">
                <dt>Full Name</dt>
                <dd>@Model.FullName</dd>

                <dt>Specialization</dt>
                <dd>@Model.Specialization</dd>

                <dt>Department</dt>
                <dd>@Model.Department?.Name</dd>
            </dl>

            <div class="actions">
                <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn-soft"><i class="bi bi-pencil-square"></i> Edit</a>
                <a asp-action="Index" class="btn-soft"><i class="bi bi-arrow-left"></i> Back</a>
            </div>
        </div>
    </div>