@model HospitalManagementSystem.Models.Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

<h1>Doctor Details</h1>
<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Specialization</dt>
        <dd class="col-sm-10">@Model.Specialization</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department?.Name</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>