@model HospitalManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container mt-5">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-trash-fill me-2"></i>Delete Appointment</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this appointment?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Patient</dt>
                <dd class="col-sm-9">@Model.Patient?.FullName</dd>

                <dt class="col-sm-3">Doctor</dt>
                <dd class="col-sm-9">@Model.Doctor?.FullName</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.AppointmentDate.ToString("f")</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="AppointmentId" />

                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash3 me-1"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
