@model HospitalManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-clipboard2-heart-fill me-2"></i> Appointment Details</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
        <div class="card-body">

            <dl class="row mb-4">
                <dt class="col-sm-4">🗓️ Appointment Date</dt>
                <dd class="col-sm-8">@Model.AppointmentDate.ToString("f")</dd>

                <dt class="col-sm-4">👤 Patient</dt>
                <dd class="col-sm-8">@Model.Patient?.FullName</dd>

                <dt class="col-sm-4">👨‍⚕️ Doctor</dt>
                <dd class="col-sm-8">@Model.Doctor?.FullName (@Model.Doctor?.Specialization)</dd>

                @if (Model.Invoice != null)
                {
                    <dt class="col-sm-4">💳 Invoice Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Invoice.IsPaid)
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Unpaid</span>
                        }
                    </dd>

                    <dt class="col-sm-4">🧾 Invoice Amount</dt>
                    <dd class="col-sm-8">₹ @Model.Invoice.Amount</dd>

                    <dt class="col-sm-4">📅 Invoice Issued</dt>
                    <dd class="col-sm-8">@Model.Invoice.DateIssued.ToShortDateString()</dd>
                }
                else
                {
                    <dt class="col-sm-4">💳 Invoice</dt>
                    <dd class="col-sm-8 text-muted">Not generated</dd>
                }
            </dl>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-outline-primary">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.AppointmentId" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        </div>
    </div>
</div>
