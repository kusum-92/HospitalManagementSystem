@model IEnumerable<HospitalManagementSystem.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

@section PageBackground {
    <div class="appt-bg-fixed" aria-hidden="true"></div>
    <div class="appt-bg-overlay" aria-hidden="true"></div>
}


<style>
    :root {
        --header-height:70px; --footer-height:64px;
        --primary:#5b8df9; --secondary:#7b5cfb; --accent:#17c0b5;
        --grad-main:linear-gradient(135deg,#5b8df9,#7b5cfb);
        --grad-accent:linear-gradient(90deg,#17c0b5,#3aa0ff);
        --panel-bg:linear-gradient(145deg,rgba(255,255,255,0.90),rgba(255,255,255,0.74));
        --muted:#5c6672; --text:#243041;
    }
    [data-theme="dark"] :root {
        --panel-bg:linear-gradient(145deg,rgba(34,46,60,0.92),rgba(26,36,48,0.90));
        --muted:#c2ced8; --text:#f3f7fa;
    }
    .appt-bg-fixed {
        position:fixed; top:var(--header-height); left:0; right:0; bottom:var(--footer-height);
        background-image:url('@Url.Content("~/images/dept.png")'); background-size:cover; background-position:center; z-index:0;
    }
    .appt-bg-overlay {
        position:fixed; top:var(--header-height); left:0; right:0; bottom:var(--footer-height);
        background:linear-gradient(to bottom,rgba(255,255,255,0.30),rgba(255,255,255,0.08)); z-index:1; pointer-events:none;
    }
    [data-theme="dark"] .appt-bg-overlay {
        background:linear-gradient(to bottom,rgba(0,0,0,0.55),rgba(0,0,0,0.38));
    }

    .appointments-wrapper {
        position:relative; z-index:2;
        max-width:1320px; margin:0 auto;
        padding:32px 12px 60px;
        min-height:calc(100vh - var(--header-height) - var(--footer-height));
    }
    .panel {
        background:var(--panel-bg);
        border:1px solid rgba(120,140,170,0.28);
        border-radius:30px;
        padding:48px 50px 54px;
        backdrop-filter:blur(10px); -webkit-backdrop-filter:blur(10px);
        box-shadow:0 26px 70px rgba(40,70,140,0.24);
        position:relative; overflow:hidden;
        animation:fadeAppts .55s ease;
    }
    [data-theme="dark"] .panel {
        border:1px solid rgba(255,255,255,0.10);
        box-shadow:0 26px 70px rgba(0,0,0,0.70);
    }
    .panel::before {
        content:""; position:absolute; width:560px; height:560px;
        top:-250px; right:-250px;
        background:radial-gradient(circle at 35% 40%,rgba(91,141,249,0.30),transparent 70%);
        pointer-events:none;
    }
    [data-theme="dark"] .panel::before {
        background:radial-gradient(circle at 35% 40%,rgba(91,141,249,0.20),transparent 72%);
    }

    .panel-header {
        display:flex; flex-wrap:wrap; gap:18px;
        align-items:center; justify-content:space-between;
        margin-bottom:32px;
    }
    h1.panel-title {
        font-size:2rem; font-weight:700; margin:0;
        background:linear-gradient(90deg,#5b8df9,#7b5cfb);
        -webkit-background-clip:text; background-clip:text; color:transparent;
        display:flex; gap:.65rem; align-items:center;
    }
    [data-theme="dark"] h1.panel-title {
        background:linear-gradient(90deg,#d5e6ff,#eddfff);
        text-shadow:0 0 6px rgba(255,255,255,0.35),0 2px 10px rgba(0,0,0,0.65);
    }

    .btn-accent {
        background:var(--grad-accent); color:#fff;
        border:none; border-radius:18px;
        padding:14px 30px; font-weight:600; letter-spacing:.5px;
        display:inline-flex; gap:.55rem; align-items:center;
        box-shadow:0 16px 40px rgba(56,160,255,0.36);
        text-decoration:none;
        transition:transform .25s, box-shadow .35s, filter .25s;
    }
    .btn-accent:hover { transform:translateY(-4px); box-shadow:0 26px 56px rgba(56,160,255,0.44); filter:brightness(.97); }

    .table-shell {
        overflow:hidden;
        border-radius:26px;
        border:1px solid rgba(120,140,170,0.30);
        background:rgba(255,255,255,0.74);
        backdrop-filter:blur(6px); -webkit-backdrop-filter:blur(6px);
        box-shadow:0 18px 50px rgba(40,70,140,0.18);
    }
    [data-theme="dark"] .table-shell {
        background:rgba(44,58,76,0.78);
        border:1px solid rgba(255,255,255,0.10);
        box-shadow:0 18px 50px rgba(0,0,0,0.60);
    }

    table.appt-table { width:100%; border-collapse:separate; border-spacing:0; margin:0; }
    .appt-table thead th {
        background:var(--grad-main); color:#fff; border:none;
        font-size:.75rem; font-weight:600; letter-spacing:.65px;
        padding:14px 16px; text-transform:uppercase;
    }
    .appt-table tbody td {
        padding:14px 16px; font-size:.9rem;
        border-top:1px solid rgba(120,140,170,0.25); color:var(--text);
    }
    [data-theme="dark"] .appt-table tbody td {
        border-top:1px solid rgba(255,255,255,0.12); color:#f0f4f8;
    }

    .appt-table tbody tr {
        transition:background .25s, transform .25s, box-shadow .35s;
    }
    .appt-table tbody tr:hover {
        background:rgba(255,255,255,0.90);
        transform:translateY(-3px);
        box-shadow:0 14px 32px rgba(40,70,140,0.20);
    }
    [data-theme="dark"] .appt-table tbody tr:hover {
        background:rgba(56,70,88,0.95);
        box-shadow:0 14px 32px rgba(0,0,0,0.60);
    }

    .badge-paid {
        background:linear-gradient(135deg,#17c0b5,#3aa0ff);
        color:#fff; padding:6px 14px; font-size:.65rem;
        letter-spacing:.55px; font-weight:600; border-radius:999px;
        box-shadow:0 8px 24px rgba(56,160,255,0.38);
    }
    .badge-unpaid {
        background:linear-gradient(135deg,#ffb347,#ff7b36);
        color:#fff; padding:6px 14px; font-size:.65rem;
        letter-spacing:.55px; font-weight:600; border-radius:999px;
        box-shadow:0 8px 24px rgba(255,140,70,0.42);
    }

    .empty-state {
        padding:70px 28px;
        text-align:center;
        border:1px dashed rgba(120,140,170,0.40);
        border-radius:24px;
        background:linear-gradient(145deg,rgba(255,255,255,0.85),rgba(240,244,255,0.80));
        backdrop-filter:blur(6px); -webkit-backdrop-filter:blur(6px);
        position:relative; overflow:hidden; font-style:italic; color:var(--muted);
    }
    [data-theme="dark"] .empty-state {
        background:linear-gradient(145deg,rgba(42,56,72,0.85),rgba(34,46,60,0.82));
        border:1px dashed rgba(255,255,255,0.18);
        color:#c5d2df;
    }

    .btn-row {
        background:linear-gradient(135deg,#5b8df9,#7b5cfb);
        color:#fff; font-size:.65rem; font-weight:600;
        padding:8px 14px; border:none; border-radius:12px;
        text-decoration:none; letter-spacing:.5px;
        display:inline-flex; align-items:center; gap:.35rem;
        box-shadow:0 8px 24px rgba(91,141,249,0.34);
        transition:transform .25s, box-shadow .35s;
    }
    .btn-row:hover { transform:translateY(-3px); box-shadow:0 16px 34px rgba(91,141,249,0.42); }
    .btn-row.alt {
        background:linear-gradient(135deg,#8c5bfb,#b05bff);
        box-shadow:0 8px 24px rgba(140,91,251,0.34);
    }
    .btn-row.danger {
        background:linear-gradient(135deg,#ff6b6b,#ff3d8b);
        box-shadow:0 8px 24px rgba(255,70,120,0.38);
    }

    @@keyframes fadeAppts {
        from { opacity:0; transform:translateY(18px); }
        to { opacity:1; transform:translateY(0); }
    }

    @@media (max-width:820px){
        .panel { padding:40px 34px 48px; }
    }
</style>

<div class="appointments-wrapper">
    <div class="panel">
        <div class="panel-header">
            <h1 class="panel-title">
                <span style="display:inline-flex;width:46px;height:46px;align-items:center;justify-content:center;
                      background:var(--grad-main);color:#fff;border-radius:16px;box-shadow:0 12px 32px rgba(91,141,249,0.40);">
                    <i class="bi bi-hospital"></i>
                </span>
                Appointments
            </h1>
            <a asp-action="Create" class="btn-accent">
                <i class="bi bi-calendar-plus"></i> New Appointment
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="empty-state">
                No appointments scheduled. Click “New Appointment” to get started.
            </div>
        }
        else
        {
            <div class="table-shell">
                <table class="appt-table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Invoice</th>
                        <th style="width:210px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.AppointmentId</td>
                            <td>@appointment.AppointmentDate.ToString("dd MMM yyyy hh:mm tt")</td>
                            <td>@appointment.Patient?.FullName</td>
                            <td>@appointment.Doctor?.FullName (@appointment.Doctor?.Specialization)</td>
                            <td>
                                @if (appointment.Invoice?.IsPaid == true)
                                { <span class="badge-paid">Paid</span> }
                                else { <span class="badge-unpaid">Unpaid</span> }
                            </td>
                            <td style="display:flex;flex-wrap:wrap;gap:6px;justify-content:flex-start;">
                                <a asp-action="Details" asp-route-id="@appointment.AppointmentId" class="btn-row">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@appointment.AppointmentId" class="btn-row alt">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@appointment.AppointmentId" class="btn-row danger">
                                    <i class="bi bi-trash"></i> Del
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
