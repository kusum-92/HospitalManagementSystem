@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body text-center p-5">
            <h1 class="display-4 fw-bold text-primary">Welcome to Razor Hospital</h1>
            <p class="lead text-muted mt-3">
                Razor Hospital is dedicated to providing <strong>quality healthcare</strong> with advanced technology,
                compassionate staff, and patient-centered care.
            </p>
            <p class="mt-3">
                Learn more about our facilities, departments, and medical experts.
                We ensure a safe and healing environment for every patient.
            </p>

            <a href="/Department" class="btn btn-primary btn-lg me-3 shadow-sm">
                Explore Departments
            </a>
            <a href="/Home/Privacy" class="btn btn-outline-info btn-lg shadow-sm">
                Privacy Policy
            </a>
        </div>
    </div>

    <div class="row mt-5 text-center">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <i class="bi bi-hospital fs-1 text-primary"></i>
                <h5 class="mt-3">Modern Facilities</h5>
                <p class="text-muted">Equipped with state-of-the-art medical technology and infrastructure.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <i class="bi bi-heart-pulse fs-1 text-danger"></i>
                <h5 class="mt-3">Compassionate Care</h5>
                <p class="text-muted">Our doctors and staff prioritize patient well-being and comfort.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <i class="bi bi-people fs-1 text-success"></i>
                <h5 class="mt-3">Expert Team</h5>
                <p class="text-muted">Experienced professionals committed to delivering the best healthcare.</p>
            </div>
        </div>
    </div>
</div>
